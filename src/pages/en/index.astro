---
import BaseLayout from "../../layouts/BaseLayout.astro";
import vkuData from "../../data/vku_data_en.json";
import OptimizedImage from "../../components/OptimizedImage.astro";
import CourseIframe from "../../components/CourseIframe.astro";
import CourseList from "../../components/CourseList.astro";

const { course, locations } = vkuData;

const galleryImages = [
  {
    src: "/vku-kursraum-aussenansicht.webp",
    alt: "Modern VKU classroom in Zug with a view outside",
  },
  {
    src: "/vku-lehrerin-unterricht.webp",
    alt: "VKU teacher explaining traffic rules to course participants",
  },
  {
    src: "/vku-klassenzimmer-u-form.webp",
    alt: "VKU classroom in U-shape with modern tables and chairs",
  },
  {
    src: "/vku-schulungsraum-fenster.webp",
    alt: "VKU training room with large window and street view",
  },
  {
    src: "/vku-gratis-getraenke.webp",
    alt: "Free drinks and snacks included in the VKU course",
  },
  {
    src: "/vku-lokal-aussenansicht.webp",
    alt: "Exterior view of the VKU location at Industriestrasse in Zug",
  },
];

const testimonials = [
  {
    name: "Sarah M.",
    text: "Great course! The 8 hours flew by. Very practical and clearly explained.",
    role: "Student Driver",
  },
  {
    name: "Luca B.",
    text: "Great atmosphere and cool instructors. I can only recommend it for the VKU in Zug.",
    role: "Student Driver",
  },
  {
    name: "Jana K.",
    text: "Centrally located and well organized. The snacks were a nice extra!",
    role: "Student Driver",
  },
];
---

<BaseLayout
  title="VKU Course Zug – Traffic Theory Course in 2 Days | vku-kurs-zug.ch"
  description="Book your VKU in Zug and complete the traffic theory course in just 2 days. Central in Zug, incl. materials and confirmation. Choose course date and register online now."
  canonical="https://vku-kurs-zug.ch/en/"
  lang="en"
>
  <!-- Hero Section with Background Image -->
  <section
    class="relative h-96 md:h-[500px] bg-cover bg-center"
    style="background-image: linear-gradient(rgba(0, 0, 0, 0.4), rgba(0, 0, 0, 0.4)), url('/vku-kursraum-aussenansicht.webp'); background-size: cover; background-position: center;"
  >
    <div class="absolute inset-0 flex items-center justify-center">
      <div class="text-center text-white px-4">
        <h1 class="text-4xl md:text-5xl font-bold mb-4">
          VKU Course Zug – Traffic Theory
        </h1>
        <p class="text-xl md:text-2xl mb-8">
          Your way to the driver's license: 8 hours intensive course in the
          center of Zug
        </p>
        <a
          href="#booking"
          class="bg-white text-blue-600 px-8 py-3 rounded font-bold hover:bg-gray-100 inline-block transition transform hover:scale-105"
          >Choose Course Date Now</a
        >
      </div>
    </div>
  </section>

  <!-- Table of Contents -->
  <nav class="bg-gray-50 py-4 sticky top-20 z-40 shadow-sm">
    <div class="max-w-6xl mx-auto px-4">
      <p class="text-sm font-semibold text-gray-600 mb-2">On this page:</p>
      <ul class="flex flex-wrap gap-4 text-sm">
        <li>
          <a href="#was-ist-vku" class="text-blue-600 hover:underline"
            >What is VKU?</a>
        </li>
        <li>
          <a href="#fakten" class="text-blue-600 hover:underline">Facts</a>
        </li>
        <li>
          <a href="#termine" class="text-blue-600 hover:underline">Dates</a>
        </li>
        <li>
          <a href="#module" class="text-blue-600 hover:underline">Modules</a>
        </li>
        <li>
          <a href="#standorte" class="text-blue-600 hover:underline"
            >Locations</a>
        </li>
        <li>
          <a href="#testimonials" class="text-blue-600 hover:underline"
            >Testimonials</a>
        </li>
        <li>
          <a href="#booking" class="text-blue-600 hover:underline"
            >Registration</a>
        </li>
      </ul>
    </div>
  </nav>

  <!-- Was ist VKU? -->
  <section id="was-ist-vku" class="py-12 max-w-6xl mx-auto px-4">
    <h2 class="text-3xl font-bold mb-6">
      What is Traffic Theory Instruction (VKU)?
    </h2>
    <p class="text-lg text-gray-700 mb-4">
      The <strong>Traffic Theory Instruction (VKU)</strong> is a mandatory 8-hour
      course that bridges the gap between the theoretical exam and practical driving
      lessons. It is legally required for everyone obtaining a category B (car) or
      category A1/A (motorcycle) license for the first time in Switzerland.
    </p>
    <p class="text-lg text-gray-700 mb-4">
      Our <strong>VKU Course in Zug</strong> prepares you optimally for traffic dynamics.
      You learn to recognize dangers early and assess them correctly – an essential
      skill for your safety and the <a
        href="https://vku-kurs-zug.ch/en/faq"
        class="text-blue-600 hover:underline">driving test</a
      >.
    </p>
    <p class="text-lg text-gray-700">
      The prices are <strong>all inclusive</strong>. So you can leave your
      wallet at home for the VKU. Drinks and fruit are also on us. We offer you
      a modern <strong>VKU intensive course</strong>, which you can comfortably
      complete on two evenings.
    </p>
  </section>

  <!-- Fakten Box -->
  <section id="fakten" class="bg-blue-50 py-12">
    <div class="max-w-6xl mx-auto px-4">
      <h2 class="text-3xl font-bold mb-8 text-center">VKU Zug at a Glance</h2>
      <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
        <div
          class="bg-white p-6 rounded shadow text-center hover:shadow-md transition"
        >
          <p class="text-4xl font-bold text-blue-600 mb-2">{course.price}</p>
          <p class="text-gray-700 font-semibold">Total Price</p>
          <p class="text-sm text-gray-500 mt-2">
            Incl. material, certificate, drinks, fruit
          </p>
        </div>
        <div
          class="bg-white p-6 rounded shadow text-center hover:shadow-md transition"
        >
          <p class="text-4xl font-bold text-blue-600 mb-2">{course.duration}</p>
          <p class="text-gray-700 font-semibold">Course Duration</p>
          <p class="text-sm text-gray-500 mt-2">{course.duration_days}</p>
        </div>
        <div
          class="bg-white p-6 rounded shadow text-center hover:shadow-md transition"
        >
          <p class="text-4xl font-bold text-blue-600 mb-2">4</p>
          <p class="text-gray-700 font-semibold">Modules</p>
          <p class="text-sm text-gray-500 mt-2">
            Traffic vision, environment, dynamics, tactics
          </p>
        </div>
        <div
          class="bg-white p-6 rounded shadow text-center hover:shadow-md transition"
        >
          <p class="text-4xl font-bold text-blue-600 mb-2">9 Min</p>
          <p class="text-gray-700 font-semibold">Walk from station</p>
          <p class="text-sm text-gray-500 mt-2">{course.location_main}</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Upcoming Courses List -->
  <section id="termine" class="py-12 max-w-6xl mx-auto px-4">
    <h2 class="text-3xl font-bold mb-8">Upcoming Course Dates</h2>
    <p class="text-lg text-gray-700 mb-6">
      Secure your spot for the next <strong>VKU Course in Zug</strong> now. Our courses
      are often booked out quickly.
    </p>
    <CourseList lang="en" />
  </section>

  <!-- Module -->
  <section id="module" class="py-12 max-w-6xl mx-auto px-4 bg-gray-50">
    <h2 class="text-3xl font-bold mb-8">The 4 Course Modules in Detail</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      {
        course.modules.map((module) => (
          <div class="bg-white p-6 rounded shadow hover:shadow-md transition border-l-4 border-blue-600">
            <h3 class="text-2xl font-bold mb-3">{module.title}</h3>
            <p class="text-gray-700 mb-4">{module.description}</p>
            <p class="text-gray-600 text-sm">
              In module <strong>{module.title}</strong> you will learn practical
              examples that help you avoid typical beginner mistakes. We discuss
              real traffic situations so that you can get through the exam
              safely.
            </p>
          </div>
        ))
      }
    </div>
    <div class="mt-8 p-6 bg-white rounded shadow text-center">
      <p class="text-gray-700 text-lg">
        Want to know exactly what to expect? Visit our <a
          href="/en/kursinhalt"
          class="text-blue-600 hover:underline font-bold">Course Content Page</a
        > for a detailed description of all learning objectives and contents.
      </p>
    </div>
  </section>

  <!-- Standorte -->
  <section id="standorte" class="py-12 max-w-6xl mx-auto px-4">
    <h2 class="text-3xl font-bold mb-8 text-center">VKU Locations in Zug</h2>
    <p class="text-center text-gray-700 mb-8 max-w-2xl mx-auto">
      We offer our courses at various central locations so that you can easily
      reach <strong>VKU Zug</strong>, <strong>VKU Baar</strong> or <strong
        >VKU Steinhausen</strong
      >.
    </p>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {
        locations.map((location) => (
          <div class="bg-white p-6 rounded shadow hover:shadow-lg transition border border-gray-100">
            <h3 class="text-xl font-bold mb-3">{location.name}</h3>
            <p class="text-gray-700 mb-4">{location.description}</p>
            <a
              href={`/en/ort/${location.slug}`}
              class="text-blue-600 hover:underline font-semibold flex items-center gap-1"
            >
              Learn more
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-4 w-4"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M9 5l7 7-7 7"
                />
              </svg>
            </a>
          </div>
        ))
      }
    </div>
  </section>

  <!-- Testimonials -->
  <section id="testimonials" class="bg-blue-600 py-12 text-white">
    <div class="max-w-6xl mx-auto px-4">
      <h2 class="text-3xl font-bold mb-10 text-center">
        What our participants say
      </h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {
          testimonials.map((t) => (
            <div class="bg-blue-700 p-6 rounded-lg shadow-lg">
              <div class="flex items-center mb-4">
                <div class="text-yellow-400 flex">{"★".repeat(5)}</div>
              </div>
              <p class="italic mb-4">"{t.text}"</p>
              <p class="font-bold">{t.name}</p>
              <p class="text-blue-200 text-sm">{t.role}</p>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- Image Gallery -->
  <section id="galerie" class="py-12 max-w-6xl mx-auto px-4">
    <h2 class="text-3xl font-bold mb-8 text-center">Our VKU Center</h2>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      {
        galleryImages.map((image) => (
          <div class="rounded-lg overflow-hidden shadow-lg hover:shadow-xl transition transform hover:-translate-y-1">
            <OptimizedImage
              src={image.src}
              alt={image.alt}
              width={400}
              height={300}
              class="w-full h-64 object-cover"
              loading="lazy"
            />
          </div>
        ))
      }
    </div>
  </section>

  <!-- Booking iFrame -->
  <section id="booking" class="bg-gray-50 py-12">
    <div class="max-w-6xl mx-auto px-4">
      <h2 class="text-3xl font-bold mb-8 text-center">
        Select VKU Course Date and Register
      </h2>
      <p class="text-center text-gray-700 mb-8">
        Choose your suitable date for the <strong
          >Traffic Theory Instruction Zug</strong
        > below. Registration is binding.
      </p>
      <CourseIframe
        src="https://iframe.vku-pgs.asa.ch/de/public/coursegroup/all/VktVXzU3NzQ=/0/vku/"
        title="VKU Course Registration"
        height="600px"
      />
      <div class="mt-8 text-center">
        <p class="mb-4 text-gray-600">
          Do you have any questions before booking?
        </p>
        <a
          href="/en/kontakt"
          class="bg-white border-2 border-blue-600 text-blue-600 px-8 py-3 rounded font-bold hover:bg-blue-50 inline-block transition"
          >Contact us</a
        >
      </div>
    </div>
  </section>

  <!-- FAQ Preview -->
  <section class="py-12 max-w-6xl mx-auto px-4">
    <h2 class="text-3xl font-bold mb-8">Frequently Asked Questions</h2>
    <div class="space-y-4">
      {
        course.faq.slice(0, 3).map((item) => (
          <details class="border rounded p-4 hover:bg-gray-50 group">
            <summary class="font-semibold cursor-pointer text-lg list-none flex justify-between items-center">
              {item.question}
              <span class="group-open:rotate-180 transition-transform">▼</span>
            </summary>
            <p class="mt-4 text-gray-700">{item.answer}</p>
          </details>
        ))
      }
    </div>
    <div class="mt-8 text-center">
      <a
        href="/en/faq"
        class="text-blue-600 hover:underline font-semibold text-lg"
        >View all FAQs →</a
      >
    </div>
  </section>

  <!-- Breadcrumb Schema -->
  <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "BreadcrumbList",
      "itemListElement": [
        {
          "@type": "ListItem",
          "position": 1,
          "name": "Home",
          "item": "https://vku-kurs-zug.ch/en/"
        }
      ]
    }
  </script>

  <!-- Course Schema -->
  <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "Course",
      "name": "Traffic Theory Instruction (VKU) Zug",
      "description": "8-hour traffic theory instruction in the center of Zug",
      "duration": "PT8H",
      "offers": {
        "@type": "Offer",
        "price": "230",
        "priceCurrency": "CHF"
      },
      "provider": {
        "@type": "Organization",
        "name": "VKU Zug"
      }
    }
  </script>
</BaseLayout>
