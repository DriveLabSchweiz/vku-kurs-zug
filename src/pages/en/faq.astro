---
import BaseLayout from "../../layouts/BaseLayout.astro";
import vkuData from "../../data/vku_data_en.json";
import OptimizedImage from "../../components/OptimizedImage.astro";

const { course } = vkuData;
---

<BaseLayout
  title="FAQ VKU Zug – Duration, Validity, Requirements & Costs"
  description="Is the VKU mandatory, how long does it take and how long is it valid? Here you will find all important answers to the VKU course in Zug – compact and understandable."
  canonical="https://vku-kurs-zug.ch/en/faq"
  lang="en"
>
  <!-- Hero Section -->
  <section class="bg-gradient-to-r from-blue-600 to-blue-800 text-white py-12">
    <div class="max-w-6xl mx-auto px-4">
      <h1 class="text-4xl font-bold mb-4">Frequently Asked Questions</h1>
      <p class="text-xl">Answers to your questions about VKU Zug</p>
    </div>
  </section>

  <!-- Breadcrumb -->
  <nav class="bg-gray-50 py-4">
    <div class="max-w-6xl mx-auto px-4">
      <a href="/en" class="text-blue-600 hover:underline">Home</a> > <span
        class="text-gray-600">FAQ</span
      >
    </div>
  </nav>

  <!-- Main Content -->
  <section class="py-12 max-w-6xl mx-auto px-4">
    <div class="mb-12">
      <OptimizedImage
        src="/vku-lehrerin-unterricht.webp"
        alt="VKU teacher explaining traffic rules to course participants"
        width={800}
        height={400}
        class="rounded-lg shadow-lg mb-8 w-full object-cover"
        loading="eager"
      />
    </div>
    <div class="space-y-6">
      {
        course.faq.map((item) => (
          <details class="border-2 border-gray-200 rounded-lg p-6 hover:border-blue-600 transition">
            <summary class="font-bold text-lg cursor-pointer text-gray-900 hover:text-blue-600">
              {item.question}
            </summary>
            <p class="mt-4 text-gray-700 leading-relaxed">{item.answer}</p>
          </details>
        ))
      }
    </div>

    <!-- Image Section -->
    <div class="my-12">
      <OptimizedImage
        src="/vku-klassenzimmer-u-form.webp"
        alt="VKU classroom in U-shape with modern tables and chairs"
        width={800}
        height={400}
        class="rounded-lg shadow-lg w-full object-cover"
        loading="lazy"
      />
    </div>

    <!-- Additional Help -->
    <div class="mt-12 p-8 bg-blue-50 rounded">
      <h2 class="text-2xl font-bold mb-4">More Questions?</h2>
      <p class="text-gray-700 mb-4">
        If your question was not answered, please contact us directly!
      </p>
      <a
        href="/en/kontakt"
        class="bg-blue-600 text-white px-6 py-2 rounded font-bold hover:bg-blue-700 inline-block"
      >
        Contact Form
      </a>
    </div>

    <!-- CTA -->
    <div class="mt-12 text-center">
      <a
        href="/en"
        class="bg-blue-600 text-white px-8 py-3 rounded font-bold hover:bg-blue-700 inline-block"
        >Back to Home</a
      >
      <a
        href="/en/#booking"
        class="bg-gray-600 text-white px-8 py-3 rounded font-bold hover:bg-gray-700 inline-block ml-4"
        >Register Now</a
      >
    </div>
  </section>

  <!-- FAQ Schema -->
  <script
    type="application/ld+json"
    is:inline
    set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "FAQPage",
      mainEntity: course.faq.map((item) => ({
        "@type": "Question",
        name: item.question,
        acceptedAnswer: {
          "@type": "Answer",
          text: item.answer,
        },
      })),
    })}
  />

  <!-- Breadcrumb Schema -->
  <script
    type="application/ld+json"
    is:inline
    set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "BreadcrumbList",
      itemListElement: [
        {
          "@type": "ListItem",
          position: 1,
          name: "Home",
          item: "https://vku-kurs-zug.ch/en/",
        },
        {
          "@type": "ListItem",
          position: 2,
          name: "FAQ",
          item: "https://vku-kurs-zug.ch/en/faq",
        },
      ],
    })}
  />
</BaseLayout>
