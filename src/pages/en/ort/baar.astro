---
import BaseLayout from "../../../layouts/BaseLayout.astro";
import vkuData from "../../../data/vku_data_en.json";
import OptimizedImage from "../../../components/OptimizedImage.astro";

const { course, locations } = vkuData;
const currentLocation = locations[1];
const otherLocations = locations.filter((l) => l.slug !== "baar");
---

<BaseLayout
  title="VKU Baar – Traffic Theory Course in Canton Zug"
  description="VKU Course in Baar in Canton Zug: Traffic theory in a modern atmosphere, easily accessible by public transport. Ideal if you live in the Baar area. Check dates and register now."
  canonical="https://vku-kurs-zug.ch/en/ort/baar"
  lang="en"
>
  <!-- Hero Section -->
  <section class="bg-gradient-to-r from-blue-600 to-blue-800 text-white py-12">
    <div class="max-w-6xl mx-auto px-4">
      <h1 class="text-4xl font-bold mb-4">VKU Baar</h1>
      <p class="text-xl">Traffic theory instruction in Baar, Canton Zug</p>
    </div>
  </section>

  <!-- Breadcrumb -->
  <nav class="bg-gray-50 py-4">
    <div class="max-w-6xl mx-auto px-4">
      <a href="/en" class="text-blue-600 hover:underline">Home</a> >
      <a href="/en/#standorte" class="text-blue-600 hover:underline"
        >Locations</a
      > >
      <span class="text-gray-600">Baar</span>
    </div>
  </nav>

  <!-- Main Content -->
  <section class="py-12 max-w-6xl mx-auto px-4">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
      <div>
        <OptimizedImage
          src="/vku-schulungsraum-fenster.webp"
          alt="VKU training room in Baar with window and street view"
          width={600}
          height={400}
          class="rounded-lg shadow-lg mb-6 w-full object-cover"
          loading="eager"
        />
        <h2 class="text-3xl font-bold mb-6">VKU in Baar</h2>
        <p class="text-lg text-gray-700 mb-4">
          Baar is one of the largest municipalities in Canton Zug and offers an
          ideal location for our traffic theory instruction. With modern
          facilities and experienced instructors, we offer you a high-quality
          learning experience.
        </p>
        <p class="text-lg text-gray-700 mb-4">
          The Baar location is easily accessible and offers good parking
          facilities as well as good public transport connections.
        </p>
        <p class="text-lg text-gray-700 mb-6">
          As at all our locations, drinks and fruit are included in the course
          price.
        </p>

        <h3 class="text-2xl font-bold mb-4">Arrival</h3>
        <ul class="text-gray-700 space-y-2 mb-6">
          <li><strong>By car:</strong> Central location with parking</li>
          <li><strong>By bus:</strong> Good bus connection</li>
          <li><strong>By train:</strong> Baar station nearby</li>
        </ul>

        <h3 class="text-2xl font-bold mb-4">Address</h3>
        <p class="text-gray-700 mb-6">
          Baar<br />
          Canton Zug<br />
          Switzerland
        </p>

        <a
          href="/en/kontakt"
          class="bg-blue-600 text-white px-8 py-3 rounded font-bold hover:bg-blue-700 inline-block"
        >
          Register Now
        </a>
      </div>

      <div>
        <div class="bg-blue-50 p-8 rounded-lg">
          <h3 class="text-2xl font-bold mb-6">Course Information</h3>
          <div class="space-y-4">
            <div class="border-b pb-4">
              <p class="font-semibold text-gray-600">Price</p>
              <p class="text-2xl font-bold text-blue-600">{course.price}</p>
              <p class="text-sm text-gray-600">
                Incl. material, certificate, drinks, fruit
              </p>
            </div>
            <div class="border-b pb-4">
              <p class="font-semibold text-gray-600">Duration</p>
              <p class="text-2xl font-bold text-blue-600">{course.duration}</p>
              <p class="text-sm text-gray-600">{course.duration_days}</p>
            </div>
            <div class="border-b pb-4">
              <p class="font-semibold text-gray-600">Modules</p>
              <p class="text-2xl font-bold text-blue-600">4</p>
              <p class="text-sm text-gray-600">
                Traffic vision, environment, dynamics, tactics
              </p>
            </div>
            <div>
              <p class="font-semibold text-gray-600">Location</p>
              <p class="text-2xl font-bold text-blue-600">Central</p>
              <p class="text-sm text-gray-600">Easily accessible</p>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Weitere Standorte -->
    <div class="mt-12">
      <h2 class="text-3xl font-bold mb-8">Other VKU Locations in Zug</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        {
          otherLocations.map((location) => (
            <div class="border rounded-lg p-6 hover:shadow-lg transition">
              <h3 class="text-xl font-bold mb-3">{location.name}</h3>
              <p class="text-gray-700 mb-4">{location.description}</p>
              <a
                href={`/en/ort/${location.slug}`}
                class="text-blue-600 hover:underline font-semibold"
              >
                Learn more →
              </a>
            </div>
          ))
        }
      </div>
    </div>

    <!-- CTA -->
    <div class="mt-12 text-center">
      <a
        href="/en"
        class="bg-blue-600 text-white px-8 py-3 rounded font-bold hover:bg-blue-700 inline-block"
        >Back to Home</a
      >
    </div>
  </section>

  <!-- Breadcrumb Schema -->
  <script
    type="application/ld+json"
    is:inline
    set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "BreadcrumbList",
      itemListElement: [
        {
          "@type": "ListItem",
          position: 1,
          name: "Home",
          item: "https://vku-kurs-zug.ch/en/",
        },
        {
          "@type": "ListItem",
          position: 2,
          name: "Locations",
          item: "https://vku-kurs-zug.ch/en/#standorte",
        },
        {
          "@type": "ListItem",
          position: 3,
          name: "Baar",
          item: "https://vku-kurs-zug.ch/en/ort/baar",
        },
      ],
    })}
  />
</BaseLayout>
