---
import BaseLayout from "../../../layouts/BaseLayout.astro";
import vkuData from "../../../data/vku_data_en.json";
import OptimizedImage from "../../../components/OptimizedImage.astro";

const { course, locations } = vkuData;
const currentLocation = locations[0];
const otherLocations = locations.filter((l) => l.slug !== "zug-hauptbahnhof");
---

<BaseLayout
  title="VKU Zug at the Station – Traffic Theory directly at Zug HB"
  description="Visit your VKU course directly at Zug station. Short distances, top public transport connection and modern classroom. Book VKU Zug at the station now and secure your spot."
  canonical="https://vku-kurs-zug.ch/en/ort/zug-hauptbahnhof"
  lang="en"
>
  <!-- Hero Section -->
  <section class="bg-gradient-to-r from-blue-600 to-blue-800 text-white py-12">
    <div class="max-w-6xl mx-auto px-4">
      <h1 class="text-4xl font-bold mb-4">VKU Zug Main Station</h1>
      <p class="text-xl">Traffic theory instruction directly at Zug station</p>
    </div>
  </section>

  <!-- Breadcrumb -->
  <nav class="bg-gray-50 py-4">
    <div class="max-w-6xl mx-auto px-4">
      <a href="/en" class="text-blue-600 hover:underline">Home</a> >
      <a href="/en/#standorte" class="text-blue-600 hover:underline"
        >Locations</a
      > >
      <span class="text-gray-600">Zug Main Station</span>
    </div>
  </nav>

  <!-- Main Content -->
  <section class="py-12 max-w-6xl mx-auto px-4">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
      <div>
        <OptimizedImage
          src="/vku-lokal-aussenansicht.webp"
          alt="Exterior view of the VKU location at Industriestrasse in Zug"
          width={600}
          height={400}
          class="rounded-lg shadow-lg mb-6 w-full object-cover"
          loading="eager"
        />
        <h2 class="text-3xl font-bold mb-6">Our classroom at the station</h2>
        <p class="text-lg text-gray-700 mb-4">
          Our classroom is located at Industriestrasse 50 in Zug, only approx. 9
          minutes walk from the station. This makes arrival particularly easy
          and convenient.
        </p>
        <p class="text-lg text-gray-700 mb-4">
          The classroom is modernly equipped with interactive learning
          materials, whiteboards, and multimedia systems. We offer a pleasant
          learning atmosphere for our students.
        </p>
        <p class="text-lg text-gray-700 mb-6">
          Drinks and fruit are included in the price, so you can refresh
          yourself during the course.
        </p>

        <h3 class="text-2xl font-bold mb-4">Arrival</h3>
        <ul class="text-gray-700 space-y-2 mb-6">
          <li><strong>By train:</strong> 9 minutes walk from Zug station</li>
          <li><strong>By bus:</strong> Line 4 to Zug, Göbli</li>
          <li><strong>By car:</strong> Parking spaces available nearby</li>
        </ul>

        <h3 class="text-2xl font-bold mb-4">Address</h3>
        <p class="text-gray-700 mb-6">
          Industriestrasse 50<br />
          6300 Zug<br />
          Switzerland
        </p>

        <a
          href="/en/kontakt"
          class="bg-blue-600 text-white px-8 py-3 rounded font-bold hover:bg-blue-700 inline-block"
        >
          Register Now
        </a>
      </div>

      <div>
        <div class="bg-blue-50 p-8 rounded-lg">
          <h3 class="text-2xl font-bold mb-6">Course Information</h3>
          <div class="space-y-4">
            <div class="border-b pb-4">
              <p class="font-semibold text-gray-600">Price</p>
              <p class="text-2xl font-bold text-blue-600">{course.price}</p>
              <p class="text-sm text-gray-600">
                Incl. material, certificate, drinks, fruit
              </p>
            </div>
            <div class="border-b pb-4">
              <p class="font-semibold text-gray-600">Duration</p>
              <p class="text-2xl font-bold text-blue-600">{course.duration}</p>
              <p class="text-sm text-gray-600">{course.duration_days}</p>
            </div>
            <div class="border-b pb-4">
              <p class="font-semibold text-gray-600">Modules</p>
              <p class="text-2xl font-bold text-blue-600">4</p>
              <p class="text-sm text-gray-600">
                Traffic vision, environment, dynamics, tactics
              </p>
            </div>
            <div>
              <p class="font-semibold text-gray-600">Travel time</p>
              <p class="text-2xl font-bold text-blue-600">9 Min</p>
              <p class="text-sm text-gray-600">Walk from station</p>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Weitere Standorte -->
    <div class="mt-12">
      <h2 class="text-3xl font-bold mb-8">Other VKU Locations in Zug</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        {
          otherLocations.map((location) => (
            <div class="border rounded-lg p-6 hover:shadow-lg transition">
              <h3 class="text-xl font-bold mb-3">{location.name}</h3>
              <p class="text-gray-700 mb-4">{location.description}</p>
              <a
                href={`/en/ort/${location.slug}`}
                class="text-blue-600 hover:underline font-semibold"
              >
                Learn more →
              </a>
            </div>
          ))
        }
      </div>
    </div>

    <!-- CTA -->
    <div class="mt-12 text-center">
      <a
        href="/en"
        class="bg-blue-600 text-white px-8 py-3 rounded font-bold hover:bg-blue-700 inline-block"
        >Back to Home</a
      >
    </div>
  </section>

  <!-- Breadcrumb Schema -->
  <script
    type="application/ld+json"
    is:inline
    set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "BreadcrumbList",
      itemListElement: [
        {
          "@type": "ListItem",
          position: 1,
          name: "Home",
          item: "https://vku-kurs-zug.ch/en/",
        },
        {
          "@type": "ListItem",
          position: 2,
          name: "Locations",
          item: "https://vku-kurs-zug.ch/en/#standorte",
        },
        {
          "@type": "ListItem",
          position: 3,
          name: "Zug Main Station",
          item: "https://vku-kurs-zug.ch/en/ort/zug-hauptbahnhof",
        },
      ],
    })}
  />

  <!-- LocalBusiness Schema -->
  <script
    type="application/ld+json"
    is:inline
    set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "LocalBusiness",
      name: "VKU Zug Main Station",
      image: "/vku-zug-bahnhof-zug-anfahrt.png",
      description: "Traffic theory instruction directly at Zug station",
      address: {
        "@type": "PostalAddress",
        streetAddress: "Industriestrasse 50",
        addressLocality: "Zug",
        postalCode: "6300",
        addressCountry: "CH",
      },
      url: "https://vku-kurs-zug.ch/en/ort/zug-hauptbahnhof",
      telephone: "+41 41 219 36 60",
    })}
  />
</BaseLayout>
