---
import BaseLayout from "../layouts/BaseLayout.astro";
import vkuData from "../data/vku_data.json";
import OptimizedImage from "../components/OptimizedImage.astro";
import CourseIframe from "../components/CourseIframe.astro";
import CourseList from "../components/CourseList.astro";

const { course, locations } = vkuData;

const galleryImages = [
  {
    src: "/vku-kursraum-aussenansicht.webp",
    alt: "Moderner VKU Kursraum in Zug mit Blick nach draussen",
  },
  {
    src: "/vku-lehrerin-unterricht.webp",
    alt: "VKU Lehrerin erklärt den Kursteilnehmern die Verkehrsregeln",
  },
  {
    src: "/vku-klassenzimmer-u-form.webp",
    alt: "VKU Klassenzimmer in U-Form mit modernen Tischen und Stühlen",
  },
  {
    src: "/vku-schulungsraum-fenster.webp",
    alt: "VKU Schulungsraum mit grossem Fenster und Blick auf die Strasse",
  },
  {
    src: "/vku-gratis-getraenke.webp",
    alt: "Kostenlose Getränke und Snacks im VKU Kurs inbegriffen",
  },
  {
    src: "/vku-lokal-aussenansicht.webp",
    alt: "Aussenansicht des VKU Lokals an der Industriestrasse in Zug",
  },
];

const testimonials = [
  {
    name: "Sarah M.",
    text: "Super Kurs! Die 8 Stunden vergingen wie im Flug. Sehr praxisnah und verständlich erklärt.",
    role: "Fahrschülerin",
  },
  {
    name: "Luca B.",
    text: "Tolle Atmosphäre und coole Instruktoren. Kann ich nur empfehlen für den VKU in Zug.",
    role: "Fahrschüler",
  },
  {
    name: "Jana K.",
    text: "Zentral gelegen und gut organisiert. Die Snacks waren ein nettes Extra!",
    role: "Fahrschülerin",
  },
];
---

<BaseLayout
  title="VKU Zug 2025 – Verkehrskundeunterricht ab CHF 230 | Jetzt buchen"
  description="VKU Zug: 8 Stunden Verkehrskundeunterricht ✓ Zentral am Bahnhof ✓ CHF 230 inkl. Material ✓ Intensivkurs an 2 Tagen ✓ Jetzt online anmelden!"
  canonical="https://vku-kurs-zug.ch/"
  lang="de"
  image="/vku-zug-social-share.webp"
>
  <!-- Hero Section with Background Image -->
  <section
    class="relative h-96 md:h-[500px] bg-cover bg-center"
    style="background-image: linear-gradient(rgba(0, 0, 0, 0.4), rgba(0, 0, 0, 0.4)), url('/vku-kursraum-aussenansicht.webp'); background-size: cover; background-position: center;"
  >
    <div class="absolute inset-0 flex items-center justify-center">
      <div class="text-center text-white px-4">
        <h1 class="text-4xl md:text-5xl font-bold mb-4">
          VKU Kurs Zug – Verkehrskundeunterricht
        </h1>
        <p class="text-xl md:text-2xl mb-8">
          Dein Weg zum Führerschein: 8 Stunden Intensivkurs im Zentrum von Zug
        </p>
        <a
          href="#booking"
          class="bg-white text-blue-600 px-8 py-3 rounded font-bold hover:bg-gray-100 inline-block transition transform hover:scale-105"
          >Jetzt Kursdatum wählen</a
        >
      </div>
    </div>
  </section>

  <!-- Table of Contents -->
  <nav class="bg-gray-50 py-4 sticky top-20 z-40 shadow-sm">
    <div class="max-w-6xl mx-auto px-4">
      <p class="text-sm font-semibold text-gray-600 mb-2">Auf dieser Seite:</p>
      <ul class="flex flex-wrap gap-4 text-sm">
        <li>
          <a href="#was-ist-vku" class="text-blue-600 hover:underline"
            >Was ist VKU?</a
          >
        </li>
        <li>
          <a href="#fakten" class="text-blue-600 hover:underline">Fakten</a>
        </li>
        <li>
          <a href="#termine" class="text-blue-600 hover:underline">Termine</a>
        </li>
        <li>
          <a href="#module" class="text-blue-600 hover:underline">Module</a>
        </li>
        <li>
          <a href="#standorte" class="text-blue-600 hover:underline"
            >Standorte</a
          >
        </li>
        <li>
          <a href="#testimonials" class="text-blue-600 hover:underline"
            >Erfahrungen</a
          >
        </li>
        <li>
          <a href="#booking" class="text-blue-600 hover:underline">Anmeldung</a>
        </li>
      </ul>
    </div>
  </nav>

  <!-- Was ist VKU? -->
  <section id="was-ist-vku" class="py-12 max-w-6xl mx-auto px-4">
    <h2 class="text-3xl font-bold mb-6">
      Was ist Verkehrskundeunterricht (VKU)?
    </h2>
    <p class="text-lg text-gray-700 mb-4">
      Der <strong>Verkehrskundeunterricht (VKU)</strong> ist ein obligatorischer
      8-stündiger Kurs, der die Brücke zwischen der theoretischen Prüfung und den
      praktischen Fahrstunden schlägt. Er ist gesetzlich vorgeschrieben für alle,
      die zum ersten Mal einen Führerschein der Kategorie B (Auto) oder Kategorie
      A1/A (Motorrad) in der Schweiz erwerben möchten.
    </p>
    <p class="text-lg text-gray-700 mb-4">
      Unser <strong>VKU Kurs in Zug</strong> bereitet dich optimal auf die Verkehrsdynamik
      vor. Du lernst Gefahren frühzeitig zu erkennen und richtig einzuschätzen –
      eine essentielle Fähigkeit für deine Sicherheit und die <a
        href="https://vku-kurs-zug.ch/faq"
        class="text-blue-600 hover:underline">Führerschein Prüfung</a
      >.
    </p>
    <p class="text-lg text-gray-700">
      Die Preise verstehen sich <strong>all inclusive</strong>. Du kannst dein
      Portemonnaie für den VKU also zu Hause lassen. Auch Getränke und Früchte
      gehen auf unsere Kosten. Wir bieten dir einen modernen <strong
        >VKU Intensivkurs</strong
      >, den du bequem an zwei Abenden absolvieren kannst.
    </p>
  </section>

  <!-- Fakten Box -->
  <section id="fakten" class="bg-blue-50 py-12">
    <div class="max-w-6xl mx-auto px-4">
      <h2 class="text-3xl font-bold mb-8 text-center">
        VKU Zug auf einen Blick
      </h2>
      <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
        <div
          class="bg-white p-6 rounded shadow text-center hover:shadow-md transition"
        >
          <p class="text-4xl font-bold text-blue-600 mb-2">{course.price}</p>
          <p class="text-gray-700 font-semibold">Gesamtpreis</p>
          <p class="text-sm text-gray-500 mt-2">
            Inkl. Material, Zertifikat, Getränke, Früchte
          </p>
        </div>
        <div
          class="bg-white p-6 rounded shadow text-center hover:shadow-md transition"
        >
          <p class="text-4xl font-bold text-blue-600 mb-2">{course.duration}</p>
          <p class="text-gray-700 font-semibold">Kursdauer</p>
          <p class="text-sm text-gray-500 mt-2">{course.duration_days}</p>
        </div>
        <div
          class="bg-white p-6 rounded shadow text-center hover:shadow-md transition"
        >
          <p class="text-4xl font-bold text-blue-600 mb-2">4</p>
          <p class="text-gray-700 font-semibold">Module</p>
          <p class="text-sm text-gray-500 mt-2">
            Verkehrssehen, -umwelt, -dynamik, -taktik
          </p>
        </div>
        <div
          class="bg-white p-6 rounded shadow text-center hover:shadow-md transition"
        >
          <p class="text-4xl font-bold text-blue-600 mb-2">9 Min</p>
          <p class="text-gray-700 font-semibold">Zu Fuss vom Bahnhof</p>
          <p class="text-sm text-gray-500 mt-2">{course.location_main}</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Upcoming Courses List -->
  <section id="termine" class="py-12 max-w-6xl mx-auto px-4">
    <h2 class="text-3xl font-bold mb-8">Nächste Kurstermine</h2>
    <p class="text-lg text-gray-700 mb-6">
      Sichere dir jetzt deinen Platz für den nächsten <strong
        >VKU Kurs in Zug</strong
      >. Unsere Kurse sind oft schnell ausgebucht.
    </p>
    <CourseList lang="de" />
  </section>

  <!-- Module -->
  <section id="module" class="py-12 max-w-6xl mx-auto px-4 bg-gray-50">
    <h2 class="text-3xl font-bold mb-8">Die 4 Kursmodule im Detail</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      {
        course.modules.map((module) => (
          <div class="bg-white p-6 rounded shadow hover:shadow-md transition border-l-4 border-blue-600">
            <h3 class="text-2xl font-bold mb-3">{module.title}</h3>
            <p class="text-gray-700 mb-4">{module.description}</p>
            <p class="text-gray-600 text-sm">
              Im Modul <strong>{module.title}</strong> lernst du praxisnahe
              Beispiele kennen, die dir helfen, typische Anfängerfehler zu
              vermeiden. Wir besprechen reale Verkehrssituationen, damit du
              sicher durch die Prüfung kommst.
            </p>
          </div>
        ))
      }
    </div>
    <div class="mt-8 p-6 bg-white rounded shadow text-center">
      <p class="text-gray-700 text-lg">
        Möchtest du genau wissen, was dich erwartet? Besuche unsere <a
          href="/kursinhalt"
          class="text-blue-600 hover:underline font-bold">Kursinhalt-Seite</a
        > für eine detaillierte Beschreibung aller Lernziele und Inhalte.
      </p>
    </div>
  </section>

  <!-- Standorte -->
  <section id="standorte" class="py-12 max-w-6xl mx-auto px-4">
    <h2 class="text-3xl font-bold mb-8 text-center">VKU Standorte in Zug</h2>
    <p class="text-center text-gray-700 mb-8 max-w-2xl mx-auto">
      Wir bieten unsere Kurse an verschiedenen zentralen Standorten an, damit du
      den <strong>VKU Zug</strong>, <strong>VKU Baar</strong> oder <strong
        >VKU Steinhausen</strong
      > bequem erreichen kannst.
    </p>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {
        locations.map((location) => (
          <div class="bg-white p-6 rounded shadow hover:shadow-lg transition border border-gray-100">
            <h3 class="text-xl font-bold mb-3">{location.name}</h3>
            <p class="text-gray-700 mb-4">{location.description}</p>
            <a
              href={`/ort/${location.slug}`}
              class="text-blue-600 hover:underline font-semibold flex items-center gap-1"
            >
              Mehr erfahren
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-4 w-4"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M9 5l7 7-7 7"
                />
              </svg>
            </a>
          </div>
        ))
      }
    </div>
  </section>

  <!-- Testimonials -->
  <section id="testimonials" class="bg-blue-600 py-12 text-white">
    <div class="max-w-6xl mx-auto px-4">
      <h2 class="text-3xl font-bold mb-10 text-center">
        Das sagen unsere Teilnehmer
      </h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {
          testimonials.map((t) => (
            <div class="bg-blue-700 p-6 rounded-lg shadow-lg">
              <div class="flex items-center mb-4">
                <div class="text-yellow-400 flex">{"★".repeat(5)}</div>
              </div>
              <p class="italic mb-4">"{t.text}"</p>
              <p class="font-bold">{t.name}</p>
              <p class="text-blue-200 text-sm">{t.role}</p>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- Image Gallery -->
  <section id="galerie" class="py-12 max-w-6xl mx-auto px-4">
    <h2 class="text-3xl font-bold mb-8 text-center">Unser VKU Zentrum</h2>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      {
        galleryImages.map((image) => (
          <div class="rounded-lg overflow-hidden shadow-lg hover:shadow-xl transition transform hover:-translate-y-1">
            <OptimizedImage
              src={image.src}
              alt={image.alt}
              width={400}
              height={300}
              class="w-full h-64 object-cover"
              loading="lazy"
            />
          </div>
        ))
      }
    </div>
  </section>

  <!-- Booking iFrame -->
  <section id="booking" class="bg-gray-50 py-12">
    <div class="max-w-6xl mx-auto px-4">
      <h2 class="text-3xl font-bold mb-8 text-center">
        VKU Kursdatum wählen und anmelden
      </h2>
      <p class="text-center text-gray-700 mb-8">
        Wähle unten deinen passenden Termin für den <strong
          >Verkehrskundeunterricht Zug</strong
        > aus. Die Anmeldung ist verbindlich.
      </p>
      <CourseIframe
        src="https://iframe.vku-pgs.asa.ch/de/public/coursegroup/all/VktVXzU3NzQ=/0/vku/"
        title="VKU Kursanmeldung"
        height="600px"
      />
      <div class="mt-8 text-center">
        <p class="mb-4 text-gray-600">Hast du noch Fragen vor der Buchung?</p>
        <a
          href="/kontakt"
          class="bg-white border-2 border-blue-600 text-blue-600 px-8 py-3 rounded font-bold hover:bg-blue-50 inline-block transition"
          >Kontakt aufnehmen</a
        >
      </div>
    </div>
  </section>

  <!-- FAQ Preview -->
  <section class="py-12 max-w-6xl mx-auto px-4">
    <h2 class="text-3xl font-bold mb-8">Häufig gestellte Fragen</h2>
    <div class="space-y-4">
      {
        course.faq.slice(0, 3).map((item) => (
          <details class="border rounded p-4 hover:bg-gray-50 group">
            <summary class="font-semibold cursor-pointer text-lg list-none flex justify-between items-center">
              {item.question}
              <span class="group-open:rotate-180 transition-transform">▼</span>
            </summary>
            <p class="mt-4 text-gray-700">{item.answer}</p>
          </details>
        ))
      }
    </div>
    <div class="mt-8 text-center">
      <a href="/faq" class="text-blue-600 hover:underline font-semibold text-lg"
        >Alle FAQs anschauen →</a
      >
    </div>
  </section>

  <!-- Breadcrumb Schema -->
  <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "BreadcrumbList",
      "itemListElement": [
        {
          "@type": "ListItem",
          "position": 1,
          "name": "Home",
          "item": "https://vku-kurs-zug.ch/"
        }
      ]
    }
  </script>

  <!-- Course Schema -->
  <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "Course",
      "name": "Verkehrskundeunterricht (VKU) Zug",
      "description": "8-stündiger Verkehrskundeunterricht im Zentrum von Zug",
      "duration": "PT8H",
      "offers": {
        "@type": "Offer",
        "price": "230",
        "priceCurrency": "CHF"
      },
      "provider": {
        "@type": "Organization",
        "name": "VKU Zug"
      }
    }
  </script>
</BaseLayout>
