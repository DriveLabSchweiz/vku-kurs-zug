---
import BaseLayout from '../layouts/BaseLayout.astro';
import vkuData from '../data/vku_data.json';
import OptimizedImage from '../components/OptimizedImage.astro';

const { course } = vkuData;
---

<BaseLayout
  title="FAQ VKU Zug – Dauer, Gültigkeit, Voraussetzungen & Kosten"
  description="Ist der VKU obligatorisch, wie lange dauert er und wie lange ist er gültig? Hier findest du alle wichtigen Antworten zum VKU Kurs in Zug – kompakt und verständlich."
  canonical="https://vku-kurs-zug.ch/faq"
>
  <!-- Hero Section -->
  <section class="bg-gradient-to-r from-blue-600 to-blue-800 text-white py-12">
    <div class="max-w-6xl mx-auto px-4">
      <h1 class="text-4xl font-bold mb-4">Häufig gestellte Fragen</h1>
      <p class="text-xl">Antworten auf deine Fragen zum VKU Zug</p>
    </div>
  </section>

  <!-- Breadcrumb -->
  <nav class="bg-gray-50 py-4">
    <div class="max-w-6xl mx-auto px-4">
      <a href="/" class="text-blue-600 hover:underline">Home</a> > <span class="text-gray-600">FAQ</span>
    </div>
  </nav>

  <!-- Main Content -->
  <section class="py-12 max-w-6xl mx-auto px-4">
    <div class="mb-12">
      <OptimizedImage 
        src="/vku-lehrerin-unterricht.webp" 
        alt="VKU Lehrerin erklaert den Kursteilnehmern die Verkehrsregeln" 
        width={800} 
        height={400} 
        class="rounded-lg shadow-lg mb-8 w-full object-cover"
        loading="eager"
      />
    </div>
    <div class="space-y-6">
      {course.faq.map((item) => (
        <details class="border-2 border-gray-200 rounded-lg p-6 hover:border-blue-600 transition">
          <summary class="font-bold text-lg cursor-pointer text-gray-900 hover:text-blue-600">
            {item.question}
          </summary>
          <p class="mt-4 text-gray-700 leading-relaxed">{item.answer}</p>
        </details>
      ))}
    </div>

    <!-- Image Section -->
    <div class="my-12">
      <OptimizedImage 
        src="/vku-klassenzimmer-u-form.webp" 
        alt="VKU Klassenzimmer in U-Form mit modernen Tischen und Stuehlen" 
        width={800} 
        height={400} 
        class="rounded-lg shadow-lg w-full object-cover"
        loading="lazy"
      />
    </div>

    <!-- Additional Help -->
    <div class="mt-12 p-8 bg-blue-50 rounded">
      <h2 class="text-2xl font-bold mb-4">Weitere Fragen?</h2>
      <p class="text-gray-700 mb-4">
        Falls deine Frage nicht beantwortet wurde, kontaktiere uns gerne direkt!
      </p>
      <a href="/kontakt" class="bg-blue-600 text-white px-6 py-2 rounded font-bold hover:bg-blue-700 inline-block">
        Kontaktformular
      </a>
    </div>

    <!-- CTA -->
    <div class="mt-12 text-center">
      <a href="/" class="bg-blue-600 text-white px-8 py-3 rounded font-bold hover:bg-blue-700 inline-block">Zurück zur Startseite</a>
      <a href="/kontakt" class="bg-gray-600 text-white px-8 py-3 rounded font-bold hover:bg-gray-700 inline-block ml-4">Jetzt anmelden</a>
    </div>
  </section>

  <!-- FAQ Schema -->
  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "FAQPage",
    "mainEntity": [
      {course.faq.map((item) => ({
        "@type": "Question",
        "name": item.question,
        "acceptedAnswer": {
          "@type": "Answer",
          "text": item.answer
        }
      }))}
    ]
  }
  </script>

  <!-- Breadcrumb Schema -->
  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "BreadcrumbList",
    "itemListElement": [
      {
        "@type": "ListItem",
        "position": 1,
        "name": "Home",
        "item": "https://vku-kurs-zug.ch/"
      },
      {
        "@type": "ListItem",
        "position": 2,
        "name": "FAQ",
        "item": "https://vku-kurs-zug.ch/faq"
      }
    ]
  }
  </script>
</BaseLayout>
